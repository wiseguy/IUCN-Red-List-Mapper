<html>
    <head>
        <script type="text/javascript" src="http://serverapi.arcgisonline.com/jsapi/arcgis/?v=2.2">
        </script>
        <script src="js/constants.js" type="text/javascript">
        </script>
        <script language="JavaScript" type="text/javascript">
            dojo.require("dojo.io.script");
            dojo.addOnLoad(onLoad);
            function onLoad(){
                var xhrArgs = {
                    url: "http://api.iucnredlist.org/index/species/pongo-pygmaeus.json",
                    callbackParamName:null,
                    load: function(data){
                        alert(data);
                    },
                    error: function(error){
                        alert("error");
                    }
                }
                dojo.io.script.get(xhrArgs);
            }
        </script>
    </head>
    <body>
    </body>
</html>
